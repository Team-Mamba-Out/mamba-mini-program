/* pages/message/message.wxss */
.tab-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  padding: 20rpx 0;
  background: #fff;
  font-weight: bold;
  margin-bottom: 10px;
}
.tab-item image{
  margin-right: 5px;
  margin-bottom: 3px;
  width: 18px;
  height: 18px;
}
.tab-item {
  position: relative;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}

.active {
  color: #674ed4;
}

.badge1 {
  position: absolute;
  
  color: #666;
  font-size: 18rpx;
  top: 0px;
  right: 10px;
}
.badge2 {
  position: absolute;
  color: #666;
  font-size: 20rpx;
  top: 0px;
  right: 44px;
}
.active-badge{
  color: #674ed4;
}
.tab-underline {
  position: absolute;
  bottom: 0;
  width: 50%;
  height: 6rpx;
  background: #674ed4;
  transition: left 0.3s ease;
 
}

.container1 {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f9fa;
}
.badge {
  
  background: red;
  color: white;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 12px;
  margin-left: 5px;
}
/* 消息容器（可滑动） */
.message-container {
  position: relative;
  overflow: hidden;
  width: 100%;
  transition: transform 0.5s ease, opacity 0.5s ease;
}
.message-container:active {
  transform: scale(0.95); /* 点击时轻微缩小 */
}
/* 消息容器滑出动画 */
.message-container-deleting {
  transform: translateX(-100%); /* 向左滑出 */
  opacity: 0; /* 渐隐 */
}
/* 消息列表 */
.message {
  display: flex;
  background: white;
  padding: 15px 15px 10px 15px;
  margin-left: 10px;
  margin-bottom: 10px;
  border-radius: 10px;
  box-shadow: 0 3px 5px rgba(0, 0, 0, 0.3);
  transition: transform 0.2s ease,border-radius 0.3s ease ;
  width: 90%;
  height: 100%;
  position: relative;
  z-index: 1;
}
.message-expanded {
  border-radius: 10px 0 0 10px !important; /* 只保留左侧圆角 */
}
/* 删除按钮（隐藏在下方） */
.delete-btn {
  display: flex;
  justify-content: center;
  border-radius: 0px 10px 10px 0px;
  position: absolute;
  right: 5px;
  top: 0;
  width: 42px;
  height: 91%;
  background: #ffe8e8;
  
  align-items: center;
  font-weight: bold;
  font-size: 14px;
  z-index: 0; /* 让消息项盖住按钮 */
}
.delete-icon{
  width: 20px;
  height: 20px;
}

/* 图标 */
.isRead{
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: rgb(139, 86, 238);
  
}
.icon image{

  width: 30px;
  height: 30px;
}
.icon {
  background-color: rgb(138, 70, 247);
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
  color: white;
  margin-right: 10px;
}

.message-content {
  flex: 1;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.description {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.timestamp {
  font-size: 12px;
  color: #aaa;
  margin-top: 12px;
}


/* 悬浮按钮 */
.floating-button {
  position: fixed;
  bottom: 80px;
  right: 20px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: #5c6bc0;
  color: white;
  font-size: 24px;
  text-align: center;
  line-height: 50px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

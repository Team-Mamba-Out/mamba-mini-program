/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #ffffff;
  /* 纯白色背景 */
  font-family:Verdana, Geneva, Tahoma, sans-serif;
}

/* Logo */
.logo {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
  border-radius: 50%;
  /* box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.12); */
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

/* 标题 */
.title {
  font-size: 28px;
  color: #2d3436;
  margin-bottom: 30px;
  letter-spacing: 1px;
  background: linear-gradient(45deg, #3559d8, #816bfa, #3559d8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-align: center;
  font-weight: bold;
}

/* 输入框容器 */
.input-wrapper {
  display: flex;
  align-items: center;
  max-width: 380px;
  padding: 8px 10px;
  border: 1px solid #c4cdfc;
  border-radius: 10px;
  margin-bottom: 15px;
  background: white;
  transition: all 0.3s ease;
  box-shadow: 0 2px 6px rgba(67, 101, 226, 0.1);
}

.input-wrapper:focus-within {
  border-color: #4365e2;
  box-shadow: 0 4px 10px rgba(67, 101, 226, 0.3);
  transform: translateY(-2px);
}

/* 输入框 */
.input {
  flex: 1;
  border: none;
  outline: none;
  font-size: 28rpx;
  color: #333;
  padding: 4px 0;
}

.input::placeholder {
  color: #8a9bb5;
  font-weight: 300;
}

/* 输入框图标 */
.icon1,
.icon2 {
  width: 22px;
  height: 22px;
  margin-right: 10px;
  object-fit: contain;
  opacity: 0.7;
}

/* 发送验证码按钮 */
.send {
  font-size: 25rpx;
  padding: 6px 10px;
  border-radius: 8px;
  color: white;
  background: linear-gradient(135deg, #6c4eda, #375de6);
  cursor: pointer;
  transition: all 0.3s ease;
  margin-left: 10px;
  font-weight: 500;
  box-shadow: 0 2px 5px rgba(67, 101, 226, 0.2);
}

.send:hover {
  background: linear-gradient(135deg, #6c4eda, #375de6);
  transform: scale(1.05);
}

/* 登录按钮 */
.login-btn {
  width: 85%;
  max-width: 380px;
  height: 50px;
  background: linear-gradient(135deg, #6c4eda, #375de6);
  color: white;
  font-size: 18px;
  font-weight: bold;
  border-radius: 10px;
  margin-top: 20px;
  cursor: pointer;
  box-shadow: 0px 4px 12px rgba(67, 101, 226, 0.2);
  transition: all 0.3s ease-in-out;
  margin-bottom: 14vh;
}

.login-btn:hover {
  background: linear-gradient(135deg, #6c4eda, #375de6);
  transform: scale(1.05);
}

/* 适配小屏幕 */
@media (max-width: 500px) {
  .input-wrapper {
    width: 80%;
  }

  .login-btn {
    width: 60%;
  }
}
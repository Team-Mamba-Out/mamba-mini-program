/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 10px;
}

/* 顶部导航栏 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  border-bottom: 1px solid #ddd;
}

.back-icon {
  font-size: 18px;
  cursor: pointer;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.navbar-icons {
  display: flex;
  gap: 10px;
}

.icon {
  font-size: 18px;
  cursor: pointer;
}

/* 发件人信息 */
.sender-info {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #55aaff;
  color: white;
  text-align: center;
  line-height: 40px;
  font-weight: bold;
  margin-right: 10px;
}

.sender-details {
  flex-grow: 1;
}

.sender-name {
  font-weight: bold;
}

.recipient {
  font-size: 12px;
  color: gray;
}

.email-meta {
  display: flex;
  align-items: center;
  gap: 5px;
}

.timestamp {
  font-size: 12px;
  color: gray;
}

.security-icon {
  font-size: 14px;
  color: orange;
}

/* 邮件正文 */
.email-content {
  padding: 15px;
  line-height: 1.6;
  color: #333;
}

/* 时间、地点信息 */
.event-info {
  padding: 15px;
  background: #f8f9fa;
  border-radius: 10px;
  margin: 10px;
}

.event-item {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-bottom: 5px;
}

.emoji {
  font-size: 16px;
}

.link {
  color: #007aff;
  text-decoration: underline;
}
.logo image{
  margin-top: 10px;
  margin-left: 5px;
  width: 100px;
  height: 100px;
}
/* 署名 */
.signature {
  padding: 15px;
  font-style: italic;
}
.buttons{
  gap: 20px;
  display: flex;
}
.reject{
  margin-left: 20px;
  width: 50%;
  background-color: #9c9c9c;
  color: white;
}
.accept{
  margin-right: 20px;
  width: 50%;
  background-color: #684edf;
  color: white;
}
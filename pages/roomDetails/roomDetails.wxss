.schedule-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  line-height: 1.5;
}

/* 美化细节 */
.schedule-block:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.12);
}

.schedule-block:active {
  transform: scale(0.98);
}

.book-btn {
  background: #2196f3;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-top: 12rpx;
  display: inline-block;
}

.description{
  line-height: 38rpx;
  color: #666;
  font-size: 28rpx;
}

/* 悬浮按钮样式 */
.float-button {
  position: fixed;
  right: 30rpx;
  bottom: 15vh;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  background-color: #684edf;
}

.button-icon {
  width: 100rpx;
  height: 100rpx;
}
/* pages/message/message.wxss */
.container1 {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f9fa;
}
.badge {
  background: red;
  color: white;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 12px;
  margin-left: 5px;
}
/* 消息容器（可滑动） */
.message-container {
  position: relative;
  overflow: hidden;
  width: 100%;
  transition: transform 0.3s ease, opacity 0.3s ease;
}
/* 消息容器滑出动画 */
.message-container-deleting {
  transform: translateX(-100%); /* 向左滑出 */
  opacity: 0; /* 渐隐 */
}
/* 消息列表 */
.message {
  display: flex;
  background: white;
  padding: 15px;
  margin-left: 10px;

  margin-bottom: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease,border-radius 0.3s ease ;
  width: 90%;
  height: 100%;
  position: relative;
  z-index: 1;
}
.message-expanded {
  border-radius: 10px 0 0 10px !important; /* 只保留左侧圆角 */
}
/* 删除按钮（隐藏在下方） */
.delete-btn {
  display: flex;
  justify-content: center;
  border-radius: 0px 10px 10px 0px;
  position: absolute;
  right: 5px;
  top: 0;
  width: 42px;
  height: 92%;
  background: #ffe8e8;
  
  align-items: center;
  font-weight: bold;
  font-size: 14px;
  z-index: 0; /* 让消息项盖住按钮 */
}
.delete-icon{
  width: 20px;
  height: 20px;
}

/* 图标 */
.isRead{
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: rgb(139, 86, 238);
  
}
.icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  text-align: center;
  line-height: 40px;
  font-size: 18px;
  font-weight: bold;
  color: white;
  margin-right: 10px;
}

.message-content {
  flex: 1;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.description {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.timestamp {
  font-size: 12px;
  color: #aaa;
  margin-top: 4px;
}


/* 悬浮按钮 */
.floating-button {
  position: fixed;
  bottom: 80px;
  right: 20px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: #5c6bc0;
  color: white;
  font-size: 24px;
  text-align: center;
  line-height: 50px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

/* 页面整体 */
.container1 {
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
  padding: 10px;
  margin-bottom: 10vh;
}
.filter-wrap{
  align-items: center;
  justify-content: center;
  width: 50%;
  display: flex;
  height: 20px;
}
.filter-wrap image{
  margin-left: 8px;
  margin-top: 4px;
  width: 10px;
  height: 10px;
}
.line1{
  
  border-right: 1px solid #d4d3d3;
}
.order-filter{
  background-color: white;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  margin-bottom: 10px;
}
/* 费用卡片 */
.payment-card {
  background: white;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
.name-wrap{
  display: flex;
  flex-direction: column;
}
/* 费用标题 & 状态 */
.payment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.payment-title {
  font-size: 16px;
  font-weight: bold;
}
.due-badge {
  font-size: 12px;
  width: 60px;
  color: white;
  font-weight: bold;
  text-align: center;
  display: flex;
  flex-direction: column;
  border-radius: 5px 5px 0 0;
}
.date-wrap{
  align-items: center;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
  border-radius: 0 0 5px 5px;
}
.date1{
  margin-top: 5px;
  font-size: 17px;
  line-height: 9px;
  font-weight: bold;
}
.date2{
  font-size: 11px;
  color:#726f6f;
}
.due {
  padding:4px 3px;
  background: #684edf;
}
.info-wrap{
  display: flex;
}
.paid {
  padding:4px 3px;
  background: gray;
}

.location {
  font-size: 12px;
  color: rgb(146, 146, 146);
}
.time-wrap{
  background-color: #f3f2f2;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-top: 15px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-evenly;
}
.time-wrap-due{
  background-color: #e9e6f8;
  padding-top: 10px;
  padding-bottom: 10px;
  margin-top: 15px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-evenly;
}
.bridge-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bridge{
  line-height: 10px;
  color: rgb(146, 146, 146);
}
.total-time{
  font-size: 13px;
  color: rgb(146, 146, 146);
}
.start-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.time{
  font-size: 20px;
  font-weight: bold;
}
.time-due{
  color: #684edf;
}
.date{
  font-size: 10px;
}
.date-due{
  color: #a090eb;
}
.bottom-container{
  display: flex;
  justify-content: space-between;
}
.amount-wrap{
  display: flex;
  flex-direction: column;
}
/* 金额 */
.amount {
  margin-top: 10px;
  font-size: 18px;
  font-weight: bold;
}


.due-in {
  font-size: 12px;
  color: gray;
}

/* 按钮 & 状态 */
.actions {
  margin-top: 5px;
  display: flex;
  justify-content: space-between;
  gap: 10px;
}

.cancel-btn,
.check-in-btn {
  width: 90px !important; 
  height: 30px !important;
  padding: 0px 15px;
  border-radius: 5px;
  font-size: 14px;
  font-weight: bold;
}

.cancel-btn {
  background-color: #f74444;
  color: white;
}

.check-in-btn {
  background-color: #684edf;
  color: white;
}

.paid-text {
  font-size: 14px;
  color: green;
  font-weight: bold;
}
.overdue-text{
  font-size: 14px;
  color: red;
  font-weight: bold;
}
/* 参考编号 */
.ref-no {
  font-size: 12px;
  color: gray;
  margin-top: 5px;
}
.remind{
  margin-top: 5rpx;
  color: #726f6f;
  font-style: italic;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 43%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  background-color: rgba(63, 62, 62, 0.5); /* 半透明背景 */
  z-index: 2;
}
.preview-container {
  background-color: white;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  width: 100%; /* 或其他尺寸 */
  
}
.section {
  
  background: white;
  
  padding: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  width: 28%;
  padding: 12rpx 8rpx;
  border-radius: 8rpx;
  background: #e8e6f3;
  color: #5e4bb1;
  text-align: center;
  font-size: 28rpx;
  transition: all 0.3s ease-in-out;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.tag.active {
  background: #5e46c9;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.tag.active::after {
  content: '✓';
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: white;
}
/* Section Title */
.section-title {
  display: block;
  font-size: 34rpx;
  color: #5e46c9;
  margin-bottom: 28rpx;
  margin-top: 5rpx;
  font-weight: bold;
  font-family: Arial, Helvetica, sans-serif;
}
.message-input {
  width: 92%;
  height: 240rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #212529;
  border: 2rpx solid #e0e0e0;
  transition: border-color 0.2s ease-in-out;
}
.submit-container {
  background-color: white;
  margin-bottom: 18px;
}

.submit-btn {
  background: linear-gradient(45deg, #684edf, #972df5);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  transition: opacity 0.3s, transform 0.2s ease-in-out;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin: 0px 60px;
}

.submit-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}